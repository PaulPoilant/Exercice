{% extends 'base.html.twig' %}

{% block title %}Hello ListController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% for names in name %}
			{{names.name}}
			<a href="{{ path('note', {'id': names.id}) }}" id="{{names.id}}">Ajouter une note</a>
			<a href="{{ path('noteliste_index', {'id': names.id}) }}" id="{{names.id}}">Modifier les notes</a>

			<br>
		{% endfor %}
	</div>
{% endblock %}

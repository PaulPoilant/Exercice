{% extends 'base.html.twig' %}

{% block title %}Note index
{% endblock %}

{% block body %}
	<h1>Note index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Description</th>
				<th>Id_user</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for note in notes %}
				<tr>
					<td>{{ note.id }}</td>
					<td>{{ note.title }}</td>
					<td>{{ note.description }}</td>
					<td>{{ note.idUser }}</td>
					<td>
						<a href="{{ path('noteliste_edit', {'id': note.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
